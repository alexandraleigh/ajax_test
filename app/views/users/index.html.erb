<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<div class="row">
  <div class="col-md-8">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr id="user_<%= user.id %>">
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user, remote: true %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },
            remote: true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<div class="col-md-4" id="show_user"></div>
</div>
<br>

<%= link_to 'New User', new_user_path %>
